<div class = "new_car">
  <div>
  <% if update_errors? %>
      <% update_errors?.each do |message| %>
        <h3 id="errors"><%=message%></h3>
      <% end %>
  <% end %>
  </div>
<form id="create_car" action="/<%=@car.id%>/edit" method = 'POST'>
  <input type="hidden" name="_method" value="PATCH">
  <input type="hidden" name="car" value="<%=@car.id%>">
  <%=@car.make%>:<br><input type="text" name="make" placeholder="<%=@car.make%>"><br>
  <%=@car.model%>:<br><input type="text" name="model" placeholder="<%=@car.model%>"><br>
  <%=@car.year%>:<br><input type="text" name="year" placeholder="<%=@car.year%>"><br>
  <input type="submit" value="Save">
</form>
</div>