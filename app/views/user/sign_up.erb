<div class="container">
<h2 class="center">Please fill out the form</h2>
  <div >
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |key, v| %>
        <h3 class="flow-text red-text center"><%="#{key} #{v}"%></h3>
      <% end %>
  <% end %>

  </div >
    <form  class="center" id="signup_form"action="/sign_up" method='POST'>
      <div class="input-field">
        <input type="text" id="name" name="username" placeholder="Choose a cool username"><br><br>
        <label for="name">Username</label>
      </div>
      <div class="input-field">
        <input class="validate" type="email" id="email" name="email" placeholder="Enter your email"><br><br>
        <label class="active" for="email">Email</label>
      </div>
      <div class="input-field">
        <input type="password" id="password" name="password" placeholder="Choose a safe password"><br><br>
        <label for="password">Password</label>
      </div>
      <button class=" center-align btn btn-large brown waves-effect wave-light">Sign Up</button>
    </form>
</div>