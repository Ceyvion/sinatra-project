<div class = "container">
  <h2 class = "center">Log in</h2><br>

  <% if !@login_route %>
    <% if login_errors%>
      <% login_errors.each do |error| %>
        <p class="flow-text red-text center" id=login_errors><%=error%></p>
      <% end %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col s6 offset-s3">
      <form class = "center-align black-text" action="/login" method='POST'>
        <div class="input-field">
            <input type="text" id="name" name="username" placeholder="Enter your username"><br><br>
            <label class="black-text" for="name">Username</label>
          </div>
          <div class="input-field">
            <input type="password" id="name" name="password" placeholder="Enter your password"><br><br>
            <label class="black-text" for="name">Password</label>
          </div>
        <button class=" center-align btn btn-large blue waves-effect wave-light">Log In</button>
      </form>  
    </div>
  </div>

</div>